<div class="showTickets row"> 
<div class="showTickets-column col-6">
<div class="card">
          <div class="card-header">
          <h2><b>TICKET DETAILS</b></h2>
          </div>
 <div class="card-body">
<h3><b>PNR </b>: <%= @pnr.pnr_id%></h3>
<h3><b>Ticket Number </b>: <%= @ticket.id%></h3>
<h3><b>Check-In Status </b>: <%= @ticket.checkin_status%></h3>
<h3><b>Seat Class </b>: <%= @ticket.seat_class%></h3>
<h3><b>Luggage (Free 5 Kgs +) </b>: <%= @ticket.luggage%></h3>
<h3><b>Food </b>: <%= @ticket.food%></h3>
<h3><b>Cost </b>: Rs.<%= @ticket.cost%></h3>
</div>
</div>
</div>
<div class="showTickets-column col-6">
<div class="card">
          <div class="card-header">
       <h2><b>FLIGHT DETAILS</b></h2>
          </div>
 <div class="card-body">
<h3><b>Flight Number </b>: <%= @ticket.flight.flight_no%></h3>
<h3><b>Journey Date </b>: <%= @ticket.flight.journey_date%></h3>
<h3><b>Departure Time </b>: <%= @ticket.flight.dep_time.strftime("%k:%M")%></h3>
<h3><b>Arrival Time </b>: <%= @ticket.flight.arr_time.strftime("%k:%M")%></h3>
<h3><b>Departure </b>: <%= @ticket.flight.departing%></h3>
<h3><b>Arrival </b>: <%= @ticket.flight.arriving%></h3>
</div>
</div>
</div>
</div>





